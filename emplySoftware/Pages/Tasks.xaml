<Page x:Class="emplySoftware.Pages.Tasks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:local="clr-namespace:emplySoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="730"
      d:DesignWidth="850"
      Title="Tasks">

    <!--#region tasks-->
    <Grid Margin="10,0">
        
        <!--#region RowDefinitions-->
        <Grid.RowDefinitions>

            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <!--#endregion-->
        
        <!--#region top_panel-->
        <Border x:Name="top_panel"
                Grid.Row="0">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">

                <!--#region searching__and_adding_task-->

                <Button x:Name="add_task_button"
                            Height="25" Width="25"
                            Margin="0,0,-30,0"
                            Panel.ZIndex="1"
                            Style="{StaticResource add_task_button}"/>

                <TextBox x:Name="MainSearchButton"
                         Tag="Search task..."
                         Height="30" Width="300"
                         Margin="0,0,10,0"
                         Style="{StaticResource search_task_text_box}"/>
    
                <!--#endregion-->

            </StackPanel>

        </Border>
        <!--#endregion-->

    </Grid>
    <!--#endregion-->
    
</Page>
