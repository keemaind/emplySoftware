<Page x:Class="emplySoftware.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:emplySoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главная">

    <Grid>

        <Border x:Name="MiddlePanelCenterBorderError"
                Margin="20,20,20,0"
                Padding="10"
                Style="{StaticResource border_main_page}"
                Width="400"
                Height="50">

            <Label Content="Пожалуйста, выберите раздел или чат"
                   Style="{StaticResource ErrorLabel}"
                   HorizontalAlignment="Center"/>

        </Border>

    </Grid>
</Page>
