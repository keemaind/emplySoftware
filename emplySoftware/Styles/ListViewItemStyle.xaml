                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>

    <!--#endregion-->

    <!--#region Users-->
    <Style x:Key="Users" TargetType="ListViewItem">
        <Setter Property="Cursor" Value="Hand"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">

                    <Border Height="50"
                         Margin="10,5"
                         Padding="10,5"
                         x:Name="border"
                         CornerRadius="15">

                        <StackPanel Orientation="Horizontal">

                            <Ellipse x:Name="ProfilePhotoChats"
                                  Width="30" Height="30"
                                  Margin="0,0,10,0"
                                  SnapsToDevicePixels="False">

                                <Ellipse.Fill>

                                    <ImageBrush x:Name="UserChatsImages"
                                             ImageSource="{Binding Image}"
                                             Stretch="UniformToFill"
                                             RenderOptions.BitmapScalingMode="HighQuality"
                                             AlignmentX="Center"
                                             AlignmentY="Center"/>

                                </Ellipse.Fill>

                            </Ellipse>

                            <StackPanel VerticalAlignment="Center"
                                        Orientation="Horizontal">

                                <TextBlock  Style="{StaticResource ProfileNamesTextBlock}"
                                            Text="{Binding MiddleName}"
                                            Margin="0,0,2,0"
                                            x:Name="middle_name_chat"/>

                                <TextBlock  Style="{StaticResource ProfileNamesTextBlock}"
                                            Text="{Binding FirstName}"
                                            x:Name="name_chat"/>

                            </StackPanel>

                        </StackPanel>

                        <Border.Background>

                            <SolidColorBrush Color="#ffffff" x:Name="BorderBackground"/>

                        </Border.Background>

                    </Border>

                    <ControlTemplate.Triggers>

                        <EventTrigger RoutedEvent="Border.MouseEnter" SourceName="border">
                            <BeginStoryboard>

                                <Storyboard>

                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                 Storyboard.TargetProperty="Color"
                                                 From="#ffffff"
                                                 To="#ececec"
                                                 Duration="0:0:0:0.2"/>

                                </Storyboard>

                            </BeginStoryboard>

                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" SourceName="border">

                            <BeginStoryboard>

                                <Storyboard>

                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                 Storyboard.TargetProperty="Color"
                                                 From="#ececec"
                                                 To="#ffffff"
                                                 Duration="0:0:0:0.2"/>

                                </Storyboard>

                            </BeginStoryboard>

                        </EventTrigger>

                        <Trigger Property="IsSelected" Value="True">

                            <Setter Property="Background" TargetName="border">

                                <Setter.Value>

                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">

                                        <GradientStop Color="#4bb57b" Offset="0"/>
                                        <GradientStop Color="#3c9162" Offset="1"/>

                                    </LinearGradientBrush>

                                </Setter.Value>

                            </Setter>

                            <Setter Property="Foreground" TargetName="name_chat" Value="#ffffff"/>

                            <Setter Property="Foreground" TargetName="middle_name_chat" Value="#ffffff"/>

                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>
    <!--#endregion-->
</ResourceDictionary>