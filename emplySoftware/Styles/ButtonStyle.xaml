    <!--#region CloseButton-->
    <Style x:Key="CloseButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource MC03}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Border.Background>
                            <SolidColorBrush Color="#F7F8FA" x:Name="BorderBackground"/>
                        </Border.Background>
                        <fa:IconImage x:Name="close"
                                      Width="15" Height="15"
                                      Icon="Close">
                            <fa:IconImage.Foreground>
                                <SolidColorBrush Color="#666666" x:Name="IconForeground"/>
                            </fa:IconImage.Foreground>
                        </fa:IconImage>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="Border.MouseEnter" SourceName="border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#F7F8FA"
                                                    To="#CB4C4F"
                                                    Duration="0:0:0:0.2"/>
                                    
                                    <ColorAnimation Storyboard.TargetName="IconForeground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#666666"
                                                    To="#FFFFFF"
                                                    Duration="0:0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Border.MouseLeave" SourceName="border">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#CB4C4F"
                                                    To="#F7F8FA"
                                                    Duration="0:0:0:0.2"/>
                                    
                                    <ColorAnimation Storyboard.TargetName="IconForeground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#FFFFFF"
                                                    To="#666666"
                                                    Duration="0:0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
    
