    <!--#region SignInButton-->
    <Style x:Key="SignInButton" TargetType="Button">
        
        <Setter Property="Background" Value="{StaticResource accent_color_04}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="{StaticResource MC01}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="FontFamily" Value="/FontTypes/#Montserrat Medium"/>
        
        <Setter Property="Template">
            
            <Setter.Value>
                
                <ControlTemplate TargetType="Button">
                    
                    <Border x:Name="border"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="15">

                        <Border.BorderBrush>

                            <SolidColorBrush Color="#41a1e5" x:Name="border_borderbrush"/>

                        </Border.BorderBrush>
                        
                        <Border.Background>

                            <SolidColorBrush Color="#f6f6f6" x:Name="BorderBackground"/>
                            
                        </Border.Background>

                        <Label Content="Войти"
                               FontFamily="/FontTypes/#Montserrat Medium"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">

                            <Label.Foreground>

                                <SolidColorBrush Color="#41a1e5" x:Name="border_label"/>

                            </Label.Foreground>
                            
                        </Label>
                        
                    </Border>
                    
                    <ControlTemplate.Triggers>
                        
                        <EventTrigger RoutedEvent="Border.MouseEnter" SourceName="border">
                            
                            <BeginStoryboard>
                                
                                <Storyboard>
                                    
                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#f6f6f6"
                                                    To="#41a1e5"
                                                    Duration="0:0:0:0.2"/>

                                    <ColorAnimation Storyboard.TargetName="border_label"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#41a1e5"
                                                    To="#f6f6f6"
                                                    Duration="0:0:0:0.2"/>

                                    <ColorAnimation Storyboard.TargetName="border_borderbrush"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#41a1e5"
                                                    To="#f6f6f6"
                                                    Duration="0:0:0:0.2"/>

                                </Storyboard>
                                
                            </BeginStoryboard>
                            
                        </EventTrigger>

                        <EventTrigger RoutedEvent="Border.MouseLeave" SourceName="border">

                            <BeginStoryboard>

                                <Storyboard>

                                    <ColorAnimation Storyboard.TargetName="BorderBackground"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#41a1e5"
                                                    To="#f6f6f6"
                                                    Duration="0:0:0:0.2"/>

                                    <ColorAnimation Storyboard.TargetName="border_label"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#f6f6f6"
                                                    To="#41a1e5"
                                                    Duration="0:0:0:0.2"/>

                                    <ColorAnimation Storyboard.TargetName="border_borderbrush"
                                                    Storyboard.TargetProperty="Color"
                                                    From="#f6f6f6"
                                                    To="#41a1e5"
                                                    Duration="0:0:0:0.2"/>

                                </Storyboard>

                            </BeginStoryboard>

                        </EventTrigger>

                    </ControlTemplate.Triggers>
                    
                </ControlTemplate>
                
            </Setter.Value>
            
        </Setter>
        
    </Style>
    <!--#endregion-->
    
