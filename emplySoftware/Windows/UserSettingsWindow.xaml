<Window x:Class="emplySoftware.Windows.UserSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:emplySoftware.Windows"
        mc:Ignorable="d"
        Title="User settings"
        Height="500" Width="400"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderBrush="{StaticResource SC01}"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MC01}"
        AllowsTransparency="True">
    
    <!--#region UserSettings-->
    <Grid>
        
        <StackPanel VerticalAlignment="Center">
            
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Border Style="{StaticResource UserPhotoBorder}"
                        Width="125" Height="125">

                    <Ellipse x:Name="ProfilePhotoChats"
                             Width="120" Height="120"
                             SnapsToDevicePixels="False">

                        <Ellipse.Fill>

                            <ImageBrush x:Name="ImageUser"
                                    ImageSource="{Binding Image}"
                                    RenderOptions.BitmapScalingMode="HighQuality"/>

                        </Ellipse.Fill>

                    </Ellipse>

                </Border>

                <Button Height="30" Width="200"
                        Margin="5"
                        Style="{StaticResource SelectAPictureButton}"
                        x:Name="BtnSelectImage"
                        Click="BtnSelectImage_Click"
                        Content="Select a picture"/>
                
                <Button Height="30" Width="200"
                        Margin="5"
                        Style="{StaticResource SignInButton}"
                        x:Name="BtnSave"
                        Click="BtnSave_Click" 
                        Content="Save"/>
                
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
    <!--#endregion-->
    
</Window>
