<Window x:Class="emplySoftware.Windows.YesOrNoWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:emplySoftware.Windows"
        mc:Ignorable="d"
        Title="Something wrong!"
        Height="auto" Width="400"
        SizeToContent="Height"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Effect>

        <DropShadowEffect BlurRadius="15"
                          Direction="-90"
                          Color="#7f7f7f"
                          ShadowDepth="2"/>

    </Window.Effect>

    <!--#region ErrorWindow-->
    <Border CornerRadius="15"
            Margin="20"
            Background="{StaticResource main_color_01}">
        <Grid>

            <!--#region RowDefinitions-->
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region TopPanel-->
            <Border x:Name="top_panel_error"
                    Grid.Row="0"
                    CornerRadius="15,15,0,0"
                    Style="{StaticResource BorderTopPanel}">

                <DockPanel>

                    <Label Content="Ошибка!"
                           Margin="5,0,0,0"
                           Style="{StaticResource ErrorLabel}"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">

                        <Button x:Name="LoginMinimizeButton"
                                Click="LoginMinimizeButton_Click"
                                Width="40" Height="30"
                                Style="{StaticResource MinimizeButton}"/>

                        <Button x:Name="LoginCloseButton"
                                Click="LoginCloseButton_Click"
                                Width="40" Height="30"
                                Style="{StaticResource CloseButton}"/>

                    </StackPanel>

                </DockPanel>

            </Border>
            <!--#endregion-->

            <!--#region MiddlePanel-->
            <Border x:Name="MiddlePanelError"
                    Grid.Row="1"
                    CornerRadius="0,0,15,15"
                    Style="{StaticResource BorderMiddlePanel}">

                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Border x:Name="MiddlePanelCenterBorderError"
                            Margin="20,20,20,0"
                            Padding="10"
                            Style="{StaticResource border_error_panel}">

                        <Border.Effect>

                            <DropShadowEffect BlurRadius="2"
                                              Direction="-90"
                                              Color="#f6f6f6"
                                              ShadowDepth="0"/>

                        </Border.Effect>

                        <StackPanel Orientation="Horizontal">

                            <Border Background="{StaticResource accent_color_01}"
                                    CornerRadius="15"
                                    Margin="0,0,5,0"
                                    Height="13" Width="13"/>

                            <TextBlock x:Name="ErrorTextBlock"
                                       Text="Вы уверены что хотите удалить задачу?"
                                       Style="{StaticResource ErrorTextBlock}"/>

                        </StackPanel>

                    </Border>

                    <StackPanel>

                        <Button x:Name="YesButton"
                                Click="YesButton_Click"
                                Content="OK"
                                Style="{StaticResource ok_error_button}"
                                Width="100" Height="40"
                                Margin="0,20,0,20">

                        </Button>
                        <Button x:Name="NoButton"
                                Click="NoButton_Click"
                                Content="OK"
                                Style="{StaticResource ok_error_button}"
                                Width="100" Height="40"
                                Margin="0,20,0,20">

                        </Button>

                    </StackPanel>

                </StackPanel>

            </Border>
            <!--#endregion-->

        </Grid>

    </Border>
    <!--#endregion-->

</Window>
