<Window x:Class="emplySoftware.Windows.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:emplySoftware.Windows"
        mc:Ignorable="d"
        Title="Something wrong!"
        Height="200" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderBrush="{StaticResource SC01}"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource MC01}"
        AllowsTransparency="True">
    
    <!--#region ErrorWindow-->
    <Grid>
        
        <!--#region RowDefinitions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region TopPanel-->
        <Border x:Name="TopPanelError"
                Grid.Row="0"
                Style="{StaticResource BorderLoginTopPanel}">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Label Content="Something wrong!"
                       Style="{StaticResource ErrorLabel}"
                       Margin="-390,0,0,0"/>

                <Button Click="LoginMinimizeButton_Click"
                        x:Name="LoginMinimizeButton"
                        Width="50" Height="30"
                        Style="{StaticResource MinimizeButton}">

                    <fa:IconImage Icon="WindowMinimize"
                                  Height="30" Width="20"
                                  Foreground="{StaticResource SC04}"/>
                </Button>

                <Button Click="LoginCloseButton_Click"
                        x:Name="LoginCloseButton"
                        Width="50" Height="30"
                        Style="{StaticResource CloseButton}"/>

            </StackPanel>

        </Border>
        <!--#endregion-->
        
        <!--#region MiddlePanel-->
        <Border x:Name="MiddlePanelError"
                Grid.Row="1"
                Style="{StaticResource BorderLoginMiddlePanel}">

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <fa:IconImage Icon="Warning"
                              Height="40" Width="40"
                              Foreground="{StaticResource Orange01}"/>

                <TextBlock x:Name="ErorTextBlock"
                           Style="{StaticResource ErrorTextBlock}"/>

            </StackPanel>
            
        </Border>
        <!--#endregion-->

    </Grid>
    <!--#endregion-->
    
</Window>
